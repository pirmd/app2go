'---+ Use common environment --------------------------------------------------
LoadScriptIfExists "include\console_tools.2go"

'---+ Who and Where am I? ------------------------------------------------------
App = "gvim"
Ver = "74"

LoadScript "include\app2goFSH.2go"

'---+ Tweak environment to be portable ----------------------------------------
CLArgs = AddCmdLineOption(Array("-i"), " "&CfgFolder&"\_viminfo", CLArgs)
SetEnv "VIMRUNTIME", ExeFolder
SetEnv "VIM", CfgFolder
FixUserFolders CfgFolder&"\_viminfo"

'---+ Run Main App ------------------------------------------------------------
Run Exe, CLArgs, RUN_NORMAL, WAIT_FOR_ME

